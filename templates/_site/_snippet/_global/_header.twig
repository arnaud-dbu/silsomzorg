{% if colorBackground is not defined %}
	{% set colorBackground = false %}
{% endif %}

{% if floatingHeader is not defined %}
	{% set floatingHeader = false %}
{% endif %}

{% if menuFillWhite is not defined %}
	{% set menuFillWhite = true %}
{% endif %}

<header class="page-header {% if floatingHeader %} absolute w-full z-10{% endif %} {% if colorBackground %}bg-primary{% endif %}">
	<div class="container">
		<div class="flex items-center justify-between">
			<a href="{{ siteUrl }}" class="">
				{% if colorBackground or floatingHeader %}
					{{ svg('@webroot/frontend/img/site/logo-white.svg')|attr({ class: 'w-[7rem]', role: 'img', 'aria-label': 'Statik' }) }}
				{% else %}
					{{ svg('@webroot/frontend/img/site/logo-primary.svg')|attr({ class: 'w-[7rem]', role: 'img', 'aria-label': 'Statik' }) }}
				{% endif %}
				<span class="sr-only">{{"Startpagina"|t}}</span>
			</a>

			{% if not systemOffline %}
				<div
					class="flex-col items-end hidden md:flex">
					{# <div class="relative flex flex-wrap items-center justify-end py-4 pl-10 min-w-searchbox">
