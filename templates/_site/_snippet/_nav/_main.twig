{% set mainNav = craft.navigate.raw('mainNav') %}
{% set searchResultsEntry = craft.entries.section('searchResults').one() %}

{% if mainNav|length %}
	<nav class="" aria-label="{{ 'Main'|t }}">
		<ul class="flex flex-wrap items-center space-x-7 pt-7 h-fit">
			{% for node in mainNav %}
				<li class="{% if node.classes|length %}{{ node.classes }}{% endif %}">
					<a href="{{ node.url }}" class="hover:underline text-white {% if node.active %}active{% endif %}" {% if node.blank %} target="_blank" rel="noopener" {% endif %}>{{ node.name }}
					</a>
				</li>
			{% endfor %}
			<a class="btn btn--secondary btn--sml " href="">
				{{'Contact'|t}}</a>
		</ul>
	</nav>
{% endif %}
